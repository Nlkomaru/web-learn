{
    "name": "theme-modern",
    "version": "0.0.0",
    "type": "module",
    "keywords": [
        "slidev-theme",
        "slidev"
    ],
    "engines": {
        "node": ">=18.0.0",
        "slidev": ">=0.19.3"
    },
    "scripts": {
        "build": "slidev build example.md",
        "dev": "slidev example.md --open",
        "export": "slidev export example.md",
        "screenshot": "slidev export example.md --format png"
    },
    "dependencies": {
        "@fontsource-variable/noto-sans-jp": "^5.2.5",
        "@fontsource/poppins": "^5.2.6",
        "@slidev/types": "latest",
        "codemirror-theme-vars": "^0.1.2",
        "prism-theme-vars": "^0.2.5"
    },
    "devDependencies": {
        "@slidev/cli": "^0.49.29"
    },
    "//": "Learn more: https://sli.dev/themes/write-a-theme.html",
    "slidev": {
        "colorSchema": "light",
        "highlighter": "all",
        "defaults": {
            "fonts": {
                "sans": "Poppins, 'Noto Sans JP Variable', 'Fluent Emoji Color', sans-serif",
                "mono": "JetBrains Mono"
            }
        }
    }
}
